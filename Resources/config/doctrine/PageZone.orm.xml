<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kitpages\CmsBundle\Entity\PageZone" table="cms_page_zone">
        <id name="page_id" column="page_id" type="integer" />
        
        <id name="zone_id" column="zone_id" type="integer"  />
        <field name="position" column="position" type="integer" />
        
      
        <lifecycle-callbacks>
          <lifecycle-callback type="prePersist" method="prePersist"/>
          <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <many-to-one field="zone" target-entity="Kitpages\CmsBundle\Entity\Zone" inversed-by="listZone" >
            <join-columns>
                <join-column name="zone_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>
        
        <many-to-one field="page" target-entity="Kitpages\CmsBundle\Entity\Page" inversed-by="listPage" >
            <join-columns>
                <join-column name="page_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>        
                
    </entity>

</doctrine-mapping>
