<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kitpages\CmsBundle\Entity\BlockPublish" table="cms_block_publish">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="label" column="label" type="string" length="250"/>
        <field name="blockType" column="block_type" type="string" length="100" />
        
        <field name="data" column="data" type="array" nullable="true" />
        
        <field name="creationDate" column="creation_date" type="datetime" />
        
        <lifecycle-callbacks>
          <lifecycle-callback type="prePersist" method="prePersist"/>
          <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>
    </entity>

</doctrine-mapping>
