<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="dispatcher" class="Symfony\Component\EventDispatcher\EventDispatcher">
        </service>        
        <service id="kitpages.cms.manager.block" class="Kitpages\CmsBundle\Model\BlockManager">
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="kitpages.cms.listener.publish" class="Kitpages\CmsBundle\BlockListener">
            <tag name="kernel.event_listener" event="kitpages.cms.block.publish" method="onPublish" />
            <argument type="service" id="doctrine"/>
        </service>
    </services>
</container>
