<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kitpages_cms.cms.cmsManager">Kitpages\CmsBundle\Model\CmsManager</parameter>
        <parameter key="kitpages_cms.cms.target_parameter">cms_target</parameter>
    </parameters>

    <services>
        <service id="kitpages.cms.manager.block" class="Kitpages\CmsBundle\Model\BlockManager">
            <argument type="service" id="event_dispatcher"/>
        </service>
        <service id="kitpages.cms.listener.publish" class="Kitpages\CmsBundle\BlockListener">
            <tag name="kernel.event_listener" event="kitpages.cms.block.publish" method="onPublish" />
            <argument type="service" id="doctrine"/>
        </service>
        <service id="kitpages.cms.model.cmsManager" class="%kitpages_cms.cms.cmsManager%">
            <tag name="kernel.listener" event="core.controller" method="onCoreController" />
            <argument>%kitpages_cms.page.default_layout%</argument>
            <argument>%kitpages_cms.cms.target_parameter%</argument>
        </service>
    </services>
</container>
