<div class="kit-cms-toolbar-top kit-cms-toolbar-main">
    <ul class="kit-cms-toolbar-top-actions">
        <li>
            <a href="{{ path('kitpages_cms_nav_arbo') }}">Tree</a>
        </li>
        {% if isNavPublished == false %}
        <li>
            <a href="{{ path('kitpages_cms_nav_publish', { 'kitpages_target' : target }) }}">Publish Navigation</a>
        </li>
        {% endif %}
        <li>
            <a class="kit-cms-advanced-mode-button">Advanced Mode</a>
        </li>
        <script>
            $(".kit-cms-advanced-mode-button").click(function() {
                $(".kit-cms-advanced").toggle();
                $(".kit-cms-form .kit-cms-advanced").parent().toggle();
            });
            $(document).ready(function() {
                $(".kit-cms-advanced").hide();
                $(".kit-cms-form .kit-cms-advanced").parent().hide();
            });
        </script>
    </ul>
    <ul class="kit-cms-toolbar-top-context-switch">
        <li {% if viewMode == 0 %}class="kit-cms-selected"{% endif %}>
            <a href="{{ path('kitpages_cms_admin_view_mode_change', { 'viewMode': 0, 'kitpages_target' : target }) }}">Production</a>
        </li>
        <li {% if viewMode == 1 %}class="kit-cms-selected"{% endif %}>
            <a href="{{ path('kitpages_cms_admin_view_mode_change', { 'viewMode': 1, 'kitpages_target' : target }) }}">Preview</a>
        </li>
        <li {% if viewMode == 2 %}class="kit-cms-selected"{% endif %}>
            <a href="{{ path('kitpages_cms_admin_view_mode_change', { 'viewMode': 2, 'kitpages_target' : target }) }}">Edit</a>
        </li>
    </ul>
    <div style="clear:both;"></div>
</div>
