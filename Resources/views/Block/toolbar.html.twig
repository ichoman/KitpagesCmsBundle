<div class="kit-cms kit-cms-block-toolbar">
    <ul class="kit-cms-menu">
        <li>Block</li>
        {% for action in actionList %}
            <li class="{{action.class|default()}}" >
                {% if action.icon is defined %}
                    <a href="{{action.url}}" title="{{action.label}}">{% if action.id == 'publish' and isPublished != 1 %}<img src="{{asset("bundles/kitpagescms/icon/warning.png")}}">{% endif %}<img src="{{asset("bundles/kitpagescms/" ~ action.icon)}}"></a>
                {% else %}
                    <a href="{{action.url}}">{% if action.id == 'publish' and isPublished != 1 %}<img src="{{asset("bundles/kitpagescms/icon/warning.png")}}">{% endif %}{{action.label}}</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</div>

