    <ul class="kit-cms-arbo-node-container">
        {% for page in arbo %}
            <li class="kit-cms-arbo-node ">
                <div class="kit-cms-arbo-line">
                    <a href="{{page.url}}">
                        <span class="kit-cms-arbo-page-title">{{page.menuTitle}}</span>
                        <span class="kit-cms-arbo-page-slug {% if page.menuTitle %}kit-cms-advanced{% endif %}">{{page.slug}}</span>
                    </a>
                    <ul class="kit-cms-arbo-actions kit-cms-menu">
                    {% for action in page.actionList %}
                        <li class="{{action.class|default()}}" >
                        {% if action.icon is defined %}
                            <a href="{{action.url}}" title="{{action.label}}"><img src="{{asset("bundles/kitpagescms/" ~ action.icon)}}"></a>
                        {% else %}
                            <a href="{{action.url}}">{{action.label}}</a>
                        {% endif %}
                        </li>

                    {% endfor %}
                    </ul>
                    <div style="clear:both"></div>
                </div>
                {% include 'KitpagesCmsBundle:Nav:arboChildren.html.twig' with {'arbo': page.children } %}
            </li>
        {% endfor %}
    </ul>