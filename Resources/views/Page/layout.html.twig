{% extends cms.layout %}

{% block mainNavigation %}
    {% render 'KitpagesCmsBundle:Nav:widget' with {'slug':'main', 'currentPageSlug':page.slug|default('')} %}
{% endblock  mainNavigation %}

{% block footerNavigation %}
    {% render 'KitpagesCmsBundle:Nav:widget' with {'slug':'footer', 'currentPageSlug':page.slug|default('')} %}
{% endblock  footerNavigation %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/kitpagescms/css/common.css') }}"  media="screen" />
{% endblock stylesheets %}


{% block toolbar %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="kit-cms kit-cms-toolbar">
        {% render 'KitpagesCmsBundle:Toolbar:widgetToolbar'%}
        {% if (viewMode is defined) and (viewMode == 2) %}
            {% render 'KitpagesCmsBundle:Page:widgetToolbar' with {'page':page} %}
        {% endif %}
        </div>
        <script>
            $(document).ready(function() {
                $(".kit-cms-delete-button > a").click(function(e) {
                    var response = confirm("Do you confirm your delete action ?");
                    if (response) {
                        e.preventDefault();
                    }
                });
            });
        </script>
    {% endif %}
{% endblock toolbar %}

