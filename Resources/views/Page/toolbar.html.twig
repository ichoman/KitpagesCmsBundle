{%spaceless%}
<div class="kit-cms-toolbar-page kit-cms-toolbar-top">
    <ul class="kit-cms-toolbar-page-top-actions">
        <li>
            <a href="{{ path('kitpages_cms_page_publish', { 'id': kitCmsPage.id, 'kitpages_target' : target }) }}">Publish</a>
        </li>
        <li>
            <a id="kit-cms-page-edit" >Edit</a>
        </li>
        <li>
            {% if kitCmsPage.isPublished == 1 %}
                Page published
            {% else %}
                <img src="{{asset("bundles/kitpagescms/icon/warning.png")}}"/> Page not published
            {% endif %}
        </li>
    </ul>
</div>
<div class="kit-cms-toolbar-extra-form kit-cms-toolbar-page-form kit-cms-hidden">
    {% render 'KitpagesCmsBundle:Page:edit' with {'id': kitCmsPage.id, 'inToolbar' : true, 'target' : target } %}
</div>
<script>
$('#kit-cms-page-edit').click(function() {
    $('.kit-cms-toolbar-page-form').toggleClass('kit-cms-hidden');
});
</script>
{%endspaceless%}
